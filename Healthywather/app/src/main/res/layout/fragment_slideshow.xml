<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorclaro"
    tools:context=".ui.slideshow.SlideshowFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_AcercaDe"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Acerca De Healthywater"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="28sp" />

        <androidx.cardview.widget.CardView
            android:layout_marginTop="20dp"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:elevation="2dp"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="15dp"
            app:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/logosinletras"
                        android:layout_marginTop="20dp" />

                    <TextView
                        android:id="@+id/txt_SinNotificaciones"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Bienvenido a la aplicación de Healthywater®, tu herramienta esencial para el cuidado y monitoreo del agua. Nuestra aplicación te permite monitorear el uso de nuestros dispositivos electrónicos, diseñados para que siempre sepas el estado de tu agua con la mejor fiabilidad."
                        android:textColor="@color/boton"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textview11"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Información del desarrollador"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textview12"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Healthywater® es una empresa líder en la creación de dispositivos electrónicos para el cuidado del agua. Nos dedicamos a innovar en soluciones que promuevan la salud y el bienestar a través de agua pura y segura."
                        android:textColor="@color/boton"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textview13"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Versión de la aplicación"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textview14"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Versión 1.0 - 20/05/2024"
                        android:textColor="@color/boton"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textview15"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Terminos y condiciones de uso"
                        android:textColor="@color/black"
                        android:textSize="20sp" />

                    <TextView
                        android:id="@+id/textview16"
                        android:layout_width="320dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Aceptacion de los terminos al acceder y utilizar el dispositivo y la aplicacion movil de Healthywater usted acepta quedar vinculado por estos terminos y condiciones, todas las leyes y regulaciones aplicables y acuerda que es el responsable del cumplimiento de cualquier local aplicable.\nSi no esta de acuerdo con alguno de estos terminos , se le prohibe utilizar o acceder a este servicio.
                        \n\nPara cualquier pregunta o información adicional acerca de estos Términos y Condiciones, por favor contáctenos a a20300155@ceti.mx o llame al 3334065590"
                        android:textColor="@color/boton"
                        android:textSize="18sp" />
                    <TextView
                        android:id="@+id/textview_link"
                        android:layout_width="320dp"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Ver más"
                        android:textColor="@color/colorPrimary"
                        android:textSize="18sp"
                        android:clickable="true"
                        android:focusable="true"
                        android:autoLink="all" />

                </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</ScrollView>
