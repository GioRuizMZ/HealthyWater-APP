<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/config_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorclaro"
    tools:context=".ui.gallery.GalleryFragment">

    <TextView
        android:id="@+id/txt_config"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Configuracion"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.cardview.widget.CardView
        android:id="@+id/tarjeta_perfil"
        android:layout_width="368dp"
        android:layout_height="190dp"
        android:layout_marginTop="55dp"
        android:elevation="2dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_config"
        app:layout_constraintVertical_bias="0.005">

        <TextView
            android:id="@+id/telefono_config"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="115dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/boton"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/telefono_icon"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="115dp"
            android:src="@drawable/telefono" />

        <TextView
            android:id="@+id/correo_config"
            android:layout_width="241dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="105dp"
            android:layout_marginTop="80dp"
            android:fontFamily="@font/poppins"
            android:textColor="@color/boton"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/nombre_config"
            android:layout_width="271dp"
            android:layout_height="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_editarperfil"
            android:layout_width="348dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="145dp"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_medium"
            android:text="Editar perfil"
            android:textColor="#3FC62D" />

        <ImageView
            android:id="@+id/correo_icon"
            android:layout_width="26dp"
            android:layout_height="24dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="80dp"
            android:src="@drawable/correo" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tarjeta_perfil">

        <LinearLayout
            android:id="@+id/layout_con_opciones"
            android:layout_width="match_parent"
            android:layout_height="256dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/configuracion_myhw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/poppins"
                android:text="Mi HealtywaterÂ®                                        >"
                android:textColor="@color/boton"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider"
                android:layout_width="345dp"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/configuracion_audio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/poppins"
                android:text="Audio                                                           >"
                android:textColor="@color/boton"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider2"
                android:layout_width="345dp"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/configuracion_notificaciones"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/poppins"
                android:text="Notificaciones                                           >"
                android:textColor="@color/boton"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider3"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/configuracion_actualizacion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/poppins"
                android:text="Actualizaciones                                        >"
                android:textColor="@color/boton"
                android:textSize="16sp" />

            <View
                android:id="@+id/divider11"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="12dp"
                android:background="?android:attr/listDivider" />

            <Button
                android:id="@+id/configuracion_ayuda"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#FFFFFF"
                android:fontFamily="@font/poppins"
                android:text="Ayuda                                                         >"
                android:textColor="@color/boton"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/foto_perfil"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="55dp"
        android:elevation="5dp"
        android:src="@drawable/usuario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/config_layout"
        app:shapeAppearanceOverlay="@style/CircularImageViewStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>