<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="360dp"
    android:layout_height="50dp">


    <TextView
        android:id="@+id/txt_NumCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Cita 1:"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="7dp"
        android:src="@drawable/calendario" />

    <TextView
        android:id="@+id/txt_HoraCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="02/02/2024"
        android:textColor="@color/boton"
        android:textSize="16sp" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="5dp"
        android:src="@drawable/reloj" />

    <TextView
        android:id="@+id/txt_FechaCita"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="12:00"
        android:textColor="@color/boton"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/textview_11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="|"
        android:textColor="@color/boton"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/txt_EstadoCita"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:text="Pendiente"
        android:textColor="@color/boton"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textview_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="11dp"
        android:fontFamily="@font/poppins"
        android:text=">"
        android:textColor="@color/boton"
        android:textSize="18sp" />
</androidx.appcompat.widget.LinearLayoutCompat>